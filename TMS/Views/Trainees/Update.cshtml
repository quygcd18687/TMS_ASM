@model TMS.Models.Trainee
@{ 
    ViewBag.Title = "Update";
}

<h2>Update this Profile</h2>

@using (Html.BeginForm("Update", "Trainees", "POST"))
{

    <div class="form-group">
        @Html.LabelFor(model => model.UserName)
        @Html.TextAreaFor(model => model.UserName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateOfBirth)
        @Html.TextAreaFor(model => model.DateOfBirth, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Education)
        @Html.TextAreaFor(model => model.Education, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Pro_Language)
        @Html.TextAreaFor(model => model.Pro_Language, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ToeicScore)
        @Html.TextAreaFor(model => model.ToeicScore, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Experience)
        @Html.TextAreaFor(model => model.Experience, new { @class = "form-control", style = "width:350px" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Location)
        @Html.TextAreaFor(model => model.Location, new { @class = "form-control", style = "width:350px" })
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit this change</button>
    </div>
}