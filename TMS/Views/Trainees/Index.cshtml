@model IEnumerable<TMS.Models.Trainee>
@{
    ViewBag.Title = "Index";
}

<h2>Trainee Home</h2>

<form>
    <label for="fname">Search by trainee Name:</label><br>
    <input type="text" id="fname" name="fname"><br>
    <button type="submit" class="btn btn-primary">Search</button>

</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Trainee Name</th>
            <th>Education</th>
            <th>Email</th>
            <th>Program Language</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>@item.UserName</td>
            <td>@item.Education</td>
            <td>@item.Email</td>
            <td>@item.Pro_Language</td>
            <td>
                @Html.ActionLink("Details Infomation", "ViewProfile", "Trainees",
                                                          new { id = item.Id },
                                                          new { @class = "btn btn-primary", style = "margin :5px" })
                @Html.ActionLink("Update this Trainee", "Update", "Trainees",
                                                      new { id = item.Id },
                                                      new { @class = "btn btn-danger", style = "margin :5px" })
                @Html.ActionLink("Delete This trainee", "Delete", "Trainees",
                                                      new { id = item.Id },
                                                      new { @class = "btn btn-primary", style = "margin :5px" })
            </td>
        </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Back", "Index", "Trainees",
    null,
    new { @class = "btn btn-primary" })