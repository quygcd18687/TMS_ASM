@model TMS.Models.Staff
@{ ViewBag.Title = "Edit";
}

<h2>Edit staff's profile</h2>

@using (Html.BeginForm("Edit", "Staffs", "POST"))
{

    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.FullName)
        @Html.TextAreaFor(model => model.FullName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateOfBirth)
        @Html.TextAreaFor(model => model.DateOfBirth, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextAreaFor(model => model.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Location)
        @Html.TextAreaFor(model => model.Location, new { @class = "form-control", style = "width:350px" })
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Change</button>
    </div>
}
