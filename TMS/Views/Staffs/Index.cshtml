@model  IEnumerable<TMS.Models.Staff>
@{
    ViewBag.Title = "Index";
}
<h2>Staff Home</h2>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Acctions</th>          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.UserName</td>
                <td class="btn-group">
                    @Html.ActionLink("Details this account", "Details", "Staffs",
                                                           new { id = item.Id },
                                                           new { @class = "btn btn-primary" })
                    @Html.ActionLink("Edit this account", "Update", "Staffs",
                                                          new { id = item.Id },
                                                          new { @class = "btn btn-dark" })
                    @Html.ActionLink("Delete this Account", "Delete", "Staffs",
                                                          new { id = item.Id },
                                                          new { @class = "btn btn-danger" })
                    @Html.ActionLink("Update pasword", "ResetPassword", "Account",
                                                          new { id = item.Id },
                                                          new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
    @Html.ActionLink("Back", "Index", "Home",
    null,
    new { @class = "btn btn-primary" })
